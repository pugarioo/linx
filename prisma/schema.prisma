generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Link {
  id           String    @id @default(uuid())
  orig_link    String
  short_code   String    @unique
  clicks       Int       @default(0)
  created_at   DateTime  @default(now())
  last_clicked DateTime?
}
